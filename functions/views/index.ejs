<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1 class="text-center"></h1>
      <div class="panel panel-login">
        <div class="panel-heading"></div>
        <div class="panel-body">
          <div class="row">
            <div class="col-lg-12 tab-content">
              <div id="login" class="tab-pane fade in active">
                <form id="login-form" method="post" action="/authenticate/">
                  <div class="form-group">
                    <input id="email" type="text" name="email" placeholder="Email" class="form-control"/><small class="form-text text-muted">The email address that you registered your membership with</small>
                  </div>
                  <div class="form-group">
                    <input id="password" type="password" name="password" placeholder="Password" class="form-control"/><small class="form-text text-muted">Your password at Nexudus Spaces (reset or contact front desk if you have forgotten)</small>
                  </div>
                  <div class="form-group">
                    <div class="row">
                      <div class="col-md-6 col-md-offset-3">
                        <input type="submit" value="Submit" class="form-control btn btn-primary"/>
                      </div>
                    </div>
                  </div>

                  <input id="mac" type="hidden" name="mac" value="<%= mac %>"/>
                  <input id="ap" type="hidden" name="ap" value="<%= ap %>"/>
                  <input id="url" type="hidden" name="url" value="<%= url %>"/>
                  <input id="timestamp" type="hidden" name="timestamp" value="<%= timestamp %>"/>
                  <input id="sitename" type="hidden" name="sitename" value="<%= sitename %>"/>
                  <input id="ssid" type="hidden" name="ssid" value="<%= ssid %>"/>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>